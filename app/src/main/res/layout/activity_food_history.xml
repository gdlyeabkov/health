<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_history_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/food_history_activity_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/food_history_activity_header_back_btn"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/back_arrow_logo" />

        <TextView
            android:id="@+id/food_history_activity_header_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Журнал питания"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/food_history_activity_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:outlineProvider="none"
            android:text="Готово"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_history_activity_food_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_history_activity_food_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Дневной перекус"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/food_history_activity_food_type_selector"
            android:layout_width="5dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="175dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/dropdown_logo" />

    </LinearLayout>

    <Button
        android:id="@+id/food_history_activity_time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:backgroundTint="#C8C8C8"
        android:text="15:00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="100dp" />

    <LinearLayout
        android:id="@+id/food_history_activity_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/food_history_activity_info_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_history_activity_info_block_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="Всего калорий: 25 ккал"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_history_activity_info_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="углеводы 0 г, Жиры 0 г, Протеин 0 г" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_history_activity_add_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/food_history_activity_add_products_block"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_history_activity_add_products_block_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="+ Добавить продукты"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/food_history_activity_save_custom_food_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:backgroundTint="#D7D7D7"
        android:text="Сохр. как польз. блюдо"
        android:textColor="#000000"
        app:cornerRadius="100dp" />

</LinearLayout>