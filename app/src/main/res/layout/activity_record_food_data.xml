<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/food_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/food_activity_meal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/food_activity_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Завтрак" />

        <RadioButton
            android:id="@+id/food_activity_lanch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обед" />

        <RadioButton
            android:id="@+id/food_activity_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ужин" />

        <RadioButton
            android:id="@+id/food_activity_morning_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Утренний перекус" />

        <RadioButton
            android:id="@+id/food_activity_day_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дневной перекус" />

        <RadioButton
            android:id="@+id/food_activity_evening_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вечерний перекус" />

    </RadioGroup>
</LinearLayout>