<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_general_measure_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/settings_general_measure_activity_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_header_back_btn_wrap"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settings_general_measure_activity_header_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/back_arrow_logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/settings_general_measure_activity_header_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Единицы измерения"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_general_measure_activity_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_growth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView304"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Рост"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_growth_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="см"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_weight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView314"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вес"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_weight_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="кг"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_temp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView316"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Температура"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_temp_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="℃"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_distanse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView318"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расстояние"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_distanse_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="км"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_sugar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView320"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сахар крови"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_sugar_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ммоль/л"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_pressure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView322"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кровянное давление"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_pressure_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="мм рт. ст."
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_hba1c"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView324"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HbA1c"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_hba1c_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#00FF00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_general_measure_activity_body_water"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView326"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Объем выпиваемой воды"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_general_measure_activity_body_water_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="мл"
                android:textColor="#00FF00" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>