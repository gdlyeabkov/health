<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/active_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/active_activity_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/active_activity_header_aside"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/active_activity_header_aside_back_btn"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/back_arrow_logo"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/active_activity_header_aside_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Активность"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/share" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/calendar_logo" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/more_vert_logo"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Сегодня"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/activity_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="138dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView161"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Шаги"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView21"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/steps_logo" />

                            <TextView
                                android:id="@+id/textView164"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="60" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView158"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6000"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="138dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView162"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Время активности"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView22"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/time_activity_logo" />

                            <TextView
                                android:id="@+id/textView165"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView159"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/90 мин"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="138dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView160"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Активные калории"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView23"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/active_calories_logo" />

                            <TextView
                                android:id="@+id/textView166"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView163"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/500 ккал"
                            android:textAlignment="center" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Всего сожжено калорий 1199 Ккал"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView157"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Расстояние пройденное в ходе активностей 0,04 км"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>